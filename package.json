{
  "name": "drynk-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "yarn clean && tsc",
    "clean": "rimraf ./dist",
    "db:dump:clean": "rimraf ./dump",
    "db:mongo:dump:create": "ts-node ./src/scripts/dump-db.script.ts",
    "db:mongo:dump:restore": "ts-node ./src/scripts/restore-db.script.ts",
    "db:mongo:migrate": "migrate-mongo up",
    "db:mongo:migrate:create": "migrate-mongo create $NAME",
    "db:mongo:migrate:revert": "migrate-mongo down",
    "db:mongo:migrate:status": "migrate-mongo status",
    "db:postgres:create": "mikro-orm schema:create -r",
    "db:postgres:drop": "mikro-orm schema:drop -r",
    "db:postgres:initialise": "ts-node ./src/common/mikro-orm.ts",
    "lint:code": "prettier --write '**/*.ts' --config ./.prettierrc",
    "lint:dependencies": "node_modules/.bin/ncu -u --semverLevel major && yarn && git add yarn.lock package.json && git commit -m 'auto-update dependencies'",
    "lint:dependencies:check": "node_modules/.bin/ncu -e 2 --semverLevel major",
    "lint:package": "sort-package-json",
    "lint:staged": "pretty-quick --staged",
    "seed:store": "ts-node ./src/microservices/alcohol-store/index.ts",
    "start:dev": "NODE_ENV=development nodemon ./src/infrastructure/app.ts",
    "start:prod": "NODE_ENV=production node ./dist/infrastructure/app.js",
    "test": "jest -c jest.config.js",
    "test:integration": "jest -c jest.integration.config.js",
    "test:spec": "jest -c jest.spec.config.js",
    "test:watch": "jest -c jest.config.js --watch"
  },
  "dependencies": {
    "@sentry/node": "^5.20.1",
    "apollo-server": "^2.16.1",
    "apollo-server-express": "^2.16.1",
    "connection-string-parser": "^1.0.3",
    "cookie-parser": "~1.4.4",
    "cors": "2.8.5",
    "cron": "^1.8.2",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-async-handler": "^1.1.4",
    "faker": "^4.1.0",
    "firebase": "^7.17.1",
    "firebase-admin": "^9.0.0",
    "get-caller-file": "^2.0.5",
    "graphql": "^15.3.0",
    "graphql-iso-date": "^3.6.1",
    "hbs": "^4.1.1",
    "helmet": "^3.23.3",
    "http-errors": "^1.8.0",
    "husky": "^4.2.5",
    "migrate-mongo": "^8.1.1",
    "migrate-mongo-ts": "^1.0.4",
    "mikro-orm": "^3.6.15",
    "mongoize-orm": "^1.0.6",
    "morgan": "^1.10.0",
    "pg": "^8.3.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.9.7",
    "typescript-logging": "^0.6.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/cron": "^1.7.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/faker": "^4.1.11",
    "@types/graphql": "^14.5.0",
    "@types/graphql-iso-date": "^3.3.3",
    "@types/helmet": "0.0.47",
    "@types/jest": "^26.0.7",
    "@types/mock-req-res": "^1.1.1",
    "@types/morgan": "^1.7.37",
    "@types/node": "^14.0.27",
    "@types/shelljs": "^0.8.8",
    "@types/sinon": "^9.0.0",
    "@types/supertest": "^2.0.10",
    "google-auth-library": "^6.0.5",
    "jest": "^26.1.0",
    "jest-config": "^26.1.0",
    "lib-manager": "^0.0.7",
    "mock-req-res": "^1.1.4",
    "nodemon": "^2.0.2",
    "npm-check-updates": "^7.0.2",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "sinon": "^9.0.2",
    "sort-package-json": "^1.35.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.4",
    "tslint-config-prettier": "^1.18.0"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/mikro-orm.config.ts",
      "./dist/config/mikro-orm.config.js"
    ]
  }
}
