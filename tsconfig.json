{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "lib": [
      "es5",
      "es2015",
      "es6",
      "dom"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "."
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.integration.ts",
    "**/*.e2e.ts",
    "**/*/factories",
    "./node_modules"
  ]
}
